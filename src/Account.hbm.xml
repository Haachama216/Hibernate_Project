<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.hibernate.pojo.Account" table="account" schema="public" catalog="My_Database">
        <id name="AccountID">
            <column name="accountid" sql-type="integer" unique="true"/>
            <generator class="identity"></generator>
        </id>
        <one-to-one name="info" class="com.hibernate.pojo.ThongTinGiaoVu" cascade="save-update"></one-to-one>
        <property name="username">
            <column name="username" sql-type="varchar(50)" length="50" not-null="true" unique="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>